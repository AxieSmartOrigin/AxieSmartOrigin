{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ card.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ card.image }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ card.cost }}</td>
            </tr>
            <tr>
                <th>Damage</th>
                <td>{{ card.damage }}</td>
            </tr>
            <tr>
                <th>Shield</th>
                <td>{{ card.shield }}</td>
            </tr>
            <tr>
                <th>Heal</th>
                <td>{{ card.heal }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ card.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_card_explorer_browse') }}">back to list</a>

{% endblock %}
